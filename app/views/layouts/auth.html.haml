- content_for :header_tags do
  = javascript_pack_tag 'public', crossorigin: 'anonymous'

.hero-widget
  .hero-widget__text
    %p= 'Willkommen auf der Biet und Suchplattform für Flüchtlinge aus der Ukraine.'
  .hero-widget__text
    %p= 'Um Dinge anbieten zu können, erstellen Sie bitte einen Account.'
  .hero-widget__text
    %p= 'Alle Ihre Daten werden sicher und geheim verarbeitet.'
- content_for :content do
  .container-alt
    .logo-container
      %h1
        = link_to root_path do
          = svg_logo_full

    .form-container
      = render 'flashes'

      = yield

= render template: 'layouts/application'
